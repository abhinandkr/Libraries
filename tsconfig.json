{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "libraries": ["./src"]
    },
    "downlevelIteration": true  // Enable downlevel iteration
  },
  "include": ["src/**/*"]
}
